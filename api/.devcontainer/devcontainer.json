{
    "name": "API Dev Container",
    "dockerComposeFile": ["../../docker-compose.yml"],
    "service": "api",
    "workspaceFolder": "/workspace/api",
    "mounts": [
        "source=${localWorkspaceFolder}/..,target=/workspace,type=bind,parent=true"
    ],
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack",
                "vmware.vscode-spring-boot",
                "redhat.java",
                "github.copilot",
                "github.copilot-chat"
            ]
        }
    },
    "postCreateCommand": "./mvnw dependency:go-offline",
    "forwardPorts": [8080]
}
